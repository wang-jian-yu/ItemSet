<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>OrderManage</servlet-name>
        <servlet-class>com.huxiaofan.api.OrderManage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderManage</servlet-name>
        <url-pattern>/api/orders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListMembers</servlet-name>
        <servlet-class>com.huxiaofan.api.ListMembers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListMembers</servlet-name>
        <url-pattern>/api/listmembers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddMembers</servlet-name>
        <servlet-class>com.huxiaofan.api.AddMembers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMembers</servlet-name>
        <url-pattern>/api/addmembers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServiceManage</servlet-name>
        <servlet-class>com.huxiaofan.api.ServiceManage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceManage</servlet-name>
        <url-pattern>/api/servicemanage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MoneyApi</servlet-name>
        <servlet-class>com.huxiaofan.api.MoneyApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MoneyApi</servlet-name>
        <url-pattern>/api/moneyapi</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StaffManage</servlet-name>
        <servlet-class>com.huxiaofan.api.StaffManage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffManage</servlet-name>
        <url-pattern>/api/staff</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginApi</servlet-name>
        <servlet-class>com.huxiaofan.api.LoginApi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowData</servlet-name>
        <servlet-class>com.huxiaofan.api.ShowData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowData</servlet-name>
        <url-pattern>/api/show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginApi</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutApi</servlet-name>
        <servlet-class>com.huxiaofan.api.LogoutApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutApi</servlet-name>
        <url-pattern>/api/logout</url-pattern>
    </servlet-mapping>
    <!--用户类-->
    <servlet>
        <servlet-name>UserApi</servlet-name>
        <servlet-class>com.huxiaofan.api.UserApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserApi</servlet-name>
        <url-pattern>/api/user</url-pattern>
    </servlet-mapping>
    <!--用户类-->
    <!--测试类-->
    <servlet>
        <servlet-name>testSession</servlet-name>
        <servlet-class>com.huxiaofan.api.testSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testSession</servlet-name>
        <url-pattern>/testsession</url-pattern>
    </servlet-mapping>
    <!--过滤器-->
    <filter>
        <filter-name>FilterAuth</filter-name>
        <filter-class>com.huxiaofan.api.FilterAuth</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <servlet-name>ListMembers</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <servlet-name>AddMembers</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <servlet-name>ServiceManage</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <servlet-name>MoneyApi</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <servlet-name>StaffManage</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <servlet-name>ShowData</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <servlet-name>OrderManage</servlet-name>
    </filter-mapping>
    <!--过滤器-->
    <filter>
        <filter-name>FilterUser</filter-name>
        <filter-class>com.huxiaofan.api.FilterUser</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterUser</filter-name>
        <servlet-name>UserApi</servlet-name>
    </filter-mapping>
</web-app>